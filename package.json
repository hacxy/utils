{
  "name": "@hacxy/utils",
  "type": "module",
  "version": "0.0.1-beta.1",
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@10.12.1",
  "description": "",
  "author": {
    "name": "hacxy",
    "email": "hacxy.js@outlook.com"
  },
  "license": "MIT",
  "keywords": [
    "ts",
    "typescript utils"
  ],
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rolldown -c ./rolldown.prod.js",
    "dev": "rolldown -c ./rolldown.dev.js -w",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:staged": "eslint --fix",
    "release": "bump",
    "prepare": "simple-git-hooks",
    "test": "vitest run"
  },
  "devDependencies": {
    "@hacxy/bump": "0.0.1-beta.1",
    "@hacxy/eslint-config": "^0.1.0",
    "eslint": "^9.29.0",
    "lint-staged": "^16.1.2",
    "rolldown": "1.0.0-beta.19",
    "rolldown-plugin-dts": "^0.13.12",
    "rollup-plugin-delete": "^3.0.1",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "node scripts/commit-msg.js"
  },
  "lint-staged": {
    "*": [
      "pnpm run lint:staged"
    ]
  }
}
