{
  "name": "@hacxy/utils",
  "type": "module",
  "version": "0.2.0",
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@10.12.1",
  "description": "",
  "author": {
    "name": "hacxy",
    "email": "hacxy.js@outlook.com"
  },
  "license": "MIT",
  "keywords": [
    "ts",
    "typescript utils"
  ],
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rolldown -c ./rolldown.prod.js",
    "dev": "rolldown -c ./rolldown.dev.js -w",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:staged": "eslint --fix",
    "release": "bump",
    "prepare": "simple-git-hooks",
    "docs:dev": "typedoc && vitepress dev docs",
    "docs:build": "typedoc && npm run build && vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "test": "vitest run",
    "test:ui": "vitest --ui"
  },
  "devDependencies": {
    "@hacxy/bump": "0.0.1-beta.1",
    "@hacxy/eslint-config": "^0.1.0",
    "@types/node": "^24.0.12",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "^3.2.4",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.29.0",
    "lint-staged": "^16.1.2",
    "rolldown": "1.0.0-beta.19",
    "rolldown-plugin-dts": "^0.13.12",
    "rollup-plugin-delete": "^3.0.1",
    "simple-git-hooks": "^2.11.1",
    "typedoc": "^0.28.7",
    "typedoc-plugin-markdown": "^4.7.0",
    "typescript": "^5.8.3",
    "vitepress": "^1.6.3",
    "vitepress-theme-mild": "^0.8.5",
    "vitest": "^3.2.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "node scripts/commit-msg.js"
  },
  "lint-staged": {
    "*": [
      "pnpm run lint:staged"
    ]
  }
}
